generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Survivor {
  id          Int       @id @default(autoincrement())
  name        String
  age         Int
  gender      String
  latitude    Float
  longitude   Float
  inventory   Inventory[]
  infected    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Item {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  options     ItemType
  inventory   Inventory[]
}

model Inventory {
  id          Int       @id @default(autoincrement())
  survivorId  Int
  itemId      Int
  quantity    Int

  survivor    Survivor  @relation(fields: [survivorId], references: [id])
  item        Item      @relation(fields: [itemId], references: [id])
}

enum ItemType {
  WATER
  FOOD
  MEDICATION
  CVIRUS_VACCINE
}